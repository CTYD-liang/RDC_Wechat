<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!--登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <!--登录-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>
    <!--退出-->
    <servlet>
        <servlet-name>logOut</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logOut</servlet-name>
        <url-pattern>/logOut.do</url-pattern>
    </servlet-mapping>
    <!--邮箱-->
    <servlet>
        <servlet-name>sendEmail</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.SendEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendEmail</servlet-name>
        <url-pattern>/sendEmail.do</url-pattern>
    </servlet-mapping>
    <!--忘记密码-->
    <servlet>
        <servlet-name>forgetCode</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.ForgetCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>forgetCode</servlet-name>
        <url-pattern>/forgetCode.do</url-pattern>
    </servlet-mapping>
    <!--验证码-->
    <servlet>
        <servlet-name>image</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.CheckCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <!--取出图片-->
    <servlet>
        <servlet-name>showImg</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.ShowPictureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showImg</servlet-name>
        <url-pattern>/showImg</url-pattern>
    </servlet-mapping>
    <!--修改密码个人信息-->
    <servlet>
        <servlet-name>modifyUser</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyUser</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>
    <!--图片-->
    <servlet>
        <servlet-name>picture</servlet-name>
        <servlet-class>com.rdc_wechat.servlet.UploadPictureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>picture</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <!--登录验证-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.rdc_wechat.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

    <!--设置session过期时间:30分钟-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>